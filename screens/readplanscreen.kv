<ScrollableLabel>:
    text: '(plan)'
    MDLabel:
        text: root.text
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[ 1 ]
        markup: True
        padding: 10 , 10

<ReadPlanScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'        
        ##cols: 1
        ##size_hint_y: None
        Widget:
            size_hint: None, None
            height: app.notch_height

        MDToolbar:
            id: toolbar
            title: '(username)'
            elevation: 0
            md_bg_color: [ 0.3 , 0.8 , 1 , .5 ]
            left_action_items: [[ "flag-outline" , lambda x: app.rememberPlan() ]]
            right_action_items: [[ "view-column" , lambda x: app.showAutofingerList() ] , [ "account-search" , lambda x: app.showSearch() ]]

        ScrollableLabel:
            id: plan_body
            text: '(plan)'
