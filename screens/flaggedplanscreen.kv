<PlanItem>:
    username: ""

<FlaggedPlanScreen>:
    BoxLayout:
        orientation: 'vertical'
        Widget:
            size_hint: None, None
            height: app.notch_height
        MDToolbar:
            id: toolbar
            title: 'Flagged Plans'
            elevation: 0
            md_bg_color: [ 1 , .3 , .8 , .5 ]
            right_action_items: [ [ "view-column" , lambda x: app.showAutofingerList() ] , [ "account-search" , lambda x: app.showSearch() ]]

        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                id: container
                MDList:
                    id: plan_list
                    size_hint_y: None
                    spacing: dp(15)
