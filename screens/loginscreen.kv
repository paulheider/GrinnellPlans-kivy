<LoginScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
                                                                    
    ## TODO:  add logo to bottom of screen
    name: 'login'
    title: 'Login'
    FloatLayout:
        size_hint: 1,1
        MDLabel:
            text: 'User Name'
            size_hint: 0.25,0.1
            pos_hint: {'center_x': (self.parent.width - 5 - 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width , 'top': (self.parent.height + 3*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
        MDTextFieldRect:
            id: username
            ## TODO - reconfigure to use rectangle mode of hint_text
            ##hint_text: 'Username'
            size_hint: 0.25,0.1
            pos_hint: {'center_x': (self.parent.width + 5 + 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width, 'top': (self.parent.height + 3*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
            multiline: False
        MDLabel:
            text: 'Password'
            size_hint: 0.25,0.1
            pos_hint: {'center_x': (self.parent.width - 5 - 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width, 'top': (self.parent.height + 2*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
        MDTextFieldRect:
            id: password
            ##hint_text: 'Password'
            password: True
            size_hint: 0.25,0.1
            pos_hint: {'center_x': (self.parent.width + 5 + 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width, 'top': (self.parent.height + 2*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
            multiline: False
        MDRectangleFlatButton:
            markup: True
            font_name: 'resources/fontawesome-webfont'
            text: "{}".format( u'\uf090' )
            size_hint: 0.5,0.1
            pos_hint: {'center_x': 0.5 , 'top': (self.parent.height + 1*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
            on_press: root.logInTask( username.text , password.text )
        MDLabel:
            markup: True
            halign: 'center'
            text: '[b]Version:[/b]  ' + root.version()
            size_hint: 0.25,0.1
            pos_hint: {'center_x': (self.parent.width - 5 - 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width, 'top': (self.parent.height - 0*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
        MDRectangleFlatButton:
            id: restore_session_button
            disabled: True
            markup: True
            text: "Restore"
            ## TODO - align button widths with username/password fields
            size_hint: 0.25,0.1
            pos_hint: {'center_x': (self.parent.width + 5 + 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width , 'top': (self.parent.height - 0*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
            on_press: root.restoreSessionTask()
        ## TODO: add guest access
        ## MDRectangleFlatButton:
        ##     text: 'Guest'
        ##     size_hint: 0.25,0.1
        ##     pos_hint: {'center_x': (self.parent.width + 5 + 0.5*(self.parent.width*0.25) - (self.parent.width/2)) / self.parent.width, 'top': (self.parent.height + 1*(5 + self.parent.height*0.1) - (self.parent.height/2)) / self.parent.height }
