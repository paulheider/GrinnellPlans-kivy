<SearchScreen>:
    GridLayout:
        orientation: 'lr-tb'
        cols: 1
        halign: "center"
        Widget:
            size_hint: None, None
            height: app.notch_height + app.navdrawer_height
        
        MDTextFieldRect:
            id: username
            ## TODO - reconfigure to use rectangle mode of hint_text
            size_hint: 0.8 , 0.2
            multiline: False
        MDRectangleFlatButton:
            id: search_username_button
            markup: True
            text: "Finger"
            size_hint: 0.8 , 0.2
            on_press: root.searchUsername()
