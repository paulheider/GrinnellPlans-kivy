<PlanItem>:
    username: ""

<AutofingerListScreen>:
    BoxLayout:
        orientation: 'vertical'
        Widget:
            size_hint: None, None
            height: app.notch_height + app.navdrawer_height

        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                id: level1_container
                MDList:
                    id: level1_list
                    size_hint_y: None
                    spacing: dp(15)
            ScrollView:
                id: level2_container
                MDList:
                    id: level2_list
                    size_hint_y: None
                    spacing: dp(15)
            ScrollView:
                id: level3_container
                MDList:
                    id: level3_list
                    size_hint_y: None
                    spacing: dp(15)
