<PlanItem>:
    username: ""

<AutofingerListScreen>:
    BoxLayout:
        orientation: 'vertical'
        Widget:
            size_hint: None, None
            height: app.notch_height
        MDToolbar:
            id: toolbar
            title: 'Autofinger Lists'
            elevation: 0
            md_bg_color: [ 1 , .3 , .8 , .5 ]
            left_action_items: [[ "menu" , lambda x: app.mainMenu() ]]
            right_action_items: [[ "account-search" , lambda x: app.showSearch() ]]

        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                id: level1_container
                MDList:
                    id: level1_list
                    size_hint_y: None
                    spacing: dp(15)
            ScrollView:
                id: level2_container
                MDList:
                    id: level2_list
                    size_hint_y: None
                    spacing: dp(15)
            ScrollView:
                id: level3_container
                MDList:
                    id: level3_list
                    size_hint_y: None
                    spacing: dp(15)
