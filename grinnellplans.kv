#:kivy 2.0.0

#:include screens/loginscreen.kv
#:import LoginScreen screens.loginscreen.LoginScreen

#:include screens/autofingerlistscreen.kv
#:import AutofingerListScreen screens.autofingerlistscreen.AutofingerListScreen

#:include screens/readplanscreen.kv
#:import ReadPlanScreen screens.readplanscreen.ReadPlanScreen

BoxLayout:
    ScreenManager:
        id: screen_manager
        LoginScreen:
            id: login_screen
            name: "login_screen"
            canvas.before:
                Color:
                    rgba: 1, .3, .8, .5
        AutofingerListScreen:
            id: autofinger_list_screen
            name: "autofinger_list_screen"
            canvas.before:
                Color:
                    rgba: 0.8, 1, .3, .5
        ReadPlanScreen:
            id: read_plan_screen
            name: "read_plan_screen"
            canvas.before:
                Color:
                    rgba: 0.3, 0.8, 1, .5

